<h1>Tasks</h1>
<ul>
<% @tasks.each do |task| %>
<li><input type="checkbox" id="scales" name="scales" <%=task.completed ? "checked" : ""%>/>
<%= link_to task.title, task_path(task) %>
<%= link_to "delete", task, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
<% end %>
</ul>

<%= link_to "New task", new_path %>
